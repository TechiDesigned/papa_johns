<p id="notice"><%= notice %></p>

<h1>Listing Pizzas</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Photo</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @pizzas.each do |pizza| %>
      <tr>
        <td><%= pizza.name %></td>
        <td><%= pizza.description %></td>
        <td><%= pizza.price %></td>
        <td><%= pizza.photo %></td>
        <td><%= link_to 'Show', pizza, class: "btn btn-default pull-right" %></td>
        <td><%= link_to 'Edit', edit_pizza_path(pizza), class: "btn btn-default pull-right" %></td>
        <td><%= link_to 'Destroy', pizza, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger pull-right" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pizza', new_pizza_path, class: "btn btn-primary" %>
